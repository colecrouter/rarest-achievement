{
    "name": "rarest-achievement",
    "private": true,
    "version": "0.0.1",
    "type": "module",
    "scripts": {
        "dev": "vite dev",
        "build": "vite build",
        "preview": "vite preview",
        "prepare": "svelte-kit sync || echo ''",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "test:unit": "vitest",
        "test": "npm run test:unit -- --run",
        "lint": "biome lint ./src && tsc --noEmit",
        "lint:fix": "biome lint ./src --fix && tsc --noEmit",
        "format": "prettier --log-level silent src && biome check ./src",
        "format:fix": "prettier --log-level silent --write src && biome check ./src --fix --unsafe",
        "db:push": "drizzle-kit push",
        "db:migrate": "npx wrangler d1 migrations apply steam-data",
        "db:studio": "drizzle-kit studio"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@inlang/paraglide-sveltekit": "^0.16.1",
        "@skeletonlabs/skeleton": "^3.1.0",
        "@skeletonlabs/skeleton-svelte": "^1.0.0",
        "@sveltejs/adapter-cloudflare": "^5.0.1",
        "@sveltejs/kit": "^2.16.0",
        "@sveltejs/vite-plugin-svelte": "^5.0.0",
        "@tailwindcss/forms": "^0.5.9",
        "@tailwindcss/typography": "^0.5.15",
        "@tailwindcss/vite": "^4.0.0",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/svelte": "^5.2.4",
        "@tl3n/steam-api-wrapper": "^1.0.0",
        "chart.js": "^4.4.8",
        "drizzle-kit": "^0.30.2",
        "drizzle-orm": "^0.41.0",
        "jsdom": "^26.0.0",
        "lucide-svelte": "^0.485.0",
        "parse-duration": "^2.1.3",
        "prettier": "^3.5.3",
        "prettier-plugin-svelte": "^3.3.3",
        "prettier-plugin-tailwindcss": "^0.6.11",
        "svelte": "^5.0.0",
        "svelte-check": "^4.0.0",
        "tailwindcss": "^4.0.0",
        "typescript": "^5.0.0",
        "vite": "^6.0.0",
        "vitest": "^3.0.0"
    },
    "overrides": {
        "wrangler": "^4.7.2"
    }
}