{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "files": {
        "ignore": [
            "**/node_modules/**",
            "**/.svelte-kit/**",
            "**/worker-configuration.d.ts",
            "**/src/lib/paraglide/**"
        ],
        "include": ["packages/**/src/**/*"]
    },
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4,
        "lineEnding": "lf",
        "ignore": ["**/*.svelte", "**/*.css"],
        "lineWidth": 120
    },
    "linter": {
        "rules": {
            "style": {
                "useConst": "off"
            },
            "complexity": {
                "noStaticOnlyClass": "off"
            }
        }
    }
}
