{
    "compilerOptions": {
        "baseUrl": "src",
        "allowJs": true,
        "checkJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "skipLibCheck": false,
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "bundler",
        "noUncheckedIndexedAccess": true,
        "target": "ESNext",
        "module": "ESNext",
        "paths": {
            "@models": ["./models"],
            "@models/*": ["./models/*"],
            "@config": ["./config"],
            "@config/*": ["./config/*"]
        }
    }
}
